@model EticaretApp.Models.Product
@{
    ViewData["Title"] = "Ürün Düzenle";
    var categories = ViewBag.Categories as List<EticaretApp.Models.Category>;
}

<h2 class="mb-4">Ürün Düzenle</h2>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" type="number" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3" id="sizeContainer">
        <label asp-for="Size" class="form-label"></label>
        <input asp-for="Size" class="form-control" placeholder="Örn: S, M, L, XL veya 38, 40, 42" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(categories, "Id", "Name"))" id="categorySelect">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="imageFile" class="form-label">Ürün Resmi</label>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mb-2">
                <img src="@Model.ImageUrl" alt="Mevcut Resim" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 4px; padding: 5px;" />
                <p class="text-muted small mt-1">Mevcut Resim</p>
            </div>
        }
        <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Yeni resim yüklemek için dosya seçin (JPG, PNG, GIF - Max: 5MB)</small>
        <div id="imagePreview" class="mt-2" style="display: none;">
            <img id="previewImg" src="" alt="Önizleme" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 4px; padding: 5px;" />
            <p class="text-muted small mt-1">Yeni Resim Önizleme</p>
        </div>
        <input type="hidden" asp-for="ImageUrl" id="imageUrl" />
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-action="Products" class="btn btn-secondary">İptal</a>
        <button type="submit" class="btn btn-success">Güncelle</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var categorySelect = document.getElementById('categorySelect');
            var sizeContainer = document.getElementById('sizeContainer');
            var sizeInput = document.querySelector('#sizeContainer input');

            function toggleSizeField() {
                var selectedOption = categorySelect.options[categorySelect.selectedIndex];
                var categoryName = selectedOption ? selectedOption.text : '';
                
                // "Giyim" içeren kategorilerde bedeni göster
                if (categoryName.toLowerCase().indexOf('giyim') !== -1) {
                    sizeContainer.style.display = 'block';
                } else {
                    sizeContainer.style.display = 'none';
                    // Edit sayfasında, eğer kategori değiştirilirse temizle
                    // Ancak sayfa ilk yüklendiğinde mevcut değer kalsın (kategori zaten giyim değilse)
                    // Gerçi Giyim değilse zaten display none olacak, kullanıcı görmeyecek.
                    // Kategori değiştirilip Giyim olmayan bişey seçilirse o zaman temizlemek mantıklı
                    if (document.activeElement === categorySelect) {
                         sizeInput.value = '';
                    }
                }
            }

            // İlk yüklemede çalıştır
            toggleSizeField();

            // Değişiklik olduğunda çalıştır
            categorySelect.addEventListener('change', toggleSizeField);

            // Resim yükleme scripti
            document.getElementById('imageFile').addEventListener('change', function(e) {
                var file = e.target.files[0];
                if (file) {
                    // Dosya boyutu kontrolü (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Dosya boyutu 5MB\'dan büyük olamaz!');
                        e.target.value = '';
                        return;
                    }
                    
                    // Önizleme göster
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        document.getElementById('previewImg').src = e.target.result;
                        document.getElementById('imagePreview').style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                } else {
                    document.getElementById('imagePreview').style.display = 'none';
                }
            });
        });
    </script>
}

